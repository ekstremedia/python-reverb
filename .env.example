# Python Reverb Configuration
# Copy this file to .env and fill in your values

# Required settings
REVERB_APP_KEY=your-reverb-app-key
REVERB_APP_SECRET=your-reverb-app-secret
REVERB_HOST=your-reverb-server.com

# Optional settings (defaults shown)
REVERB_PORT=443
REVERB_SCHEME=wss
REVERB_LOG_LEVEL=INFO

# Reconnection settings
REVERB_RECONNECT_ENABLED=true
REVERB_RECONNECT_DELAY_MIN=1.0
REVERB_RECONNECT_DELAY_MAX=30.0

# Keepalive settings
REVERB_PING_INTERVAL=30.0
REVERB_PING_TIMEOUT=10.0

# Device ID for Raspberry Pi service (optional)
DEVICE_ID=raspberry-pi-001
