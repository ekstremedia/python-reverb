# Device Configuration
DEVICE_ID=my-device-name

# Reverb Server
REVERB_APP_KEY=your-reverb-app-key
REVERB_APP_SECRET=your-reverb-app-secret
REVERB_HOST=your-server.com
REVERB_PORT=443
REVERB_SCHEME=wss

# API endpoint for responses
API_BASE_URL=https://your-server.com

# API authentication token (for image upload)
API_TOKEN=base64:your-token-here

# Capture settings
CAPTURE_SCRIPT=/home/pi/python-reverb/scripts/capture.sh
IMAGE_BASE_PATH=/var/www/html/images

# Logging (DEBUG, INFO, WARNING, ERROR)
REVERB_LOG_LEVEL=INFO
